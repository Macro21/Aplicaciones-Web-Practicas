<html>
    <head>
        <title>Gestor de tareas</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="css/tareas.css">
    </head>
    <body>
        <h1>Lista de tareas</h1>
        
        
        <div class="numTareas">
            NÃºmero de tareas pendientes: <%= numTareas %>
        </div>
        
        
        <ul class="listaTareas">
                <% if (datos) { %>
                    <% for(let dato of datos){ %>
                        <li>
                            <% if (dato.finalizada) { %>
                                <span class = "finalizada"> <%= dato.texto %> </span>
                        <%  } else { %>
                            <span> <%= dato.texto %> </span>
                            <a class="botonfinalizada" href="/finalizarTarea?nuevaTarea=<%= dato.id %>" >Marcar como finalizada</a>
                        <% } %>
                        </li>
                   <%  } %>
                <% } %> 
        </ul>
        
        <div class="nuevaTarea">
            <form action="/anyadirTarea" method="POST">
                <label for="nuevaTarea">Nueva tarea: </label>
                <input type="text" name="nuevaTarea" id="nuevaTarea"> 
                <input type="submit" value="Enviar">
            </form>
        </div>
    </body>
</html>
